<% include partials/_header %>
    <title>Lists</title>

    <section class="header">
        <div>
            <h1>My lists</h1>
            <p>Welcome to Lists</p>
        </div>
    </section>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">

        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/api/lists/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="input name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="adress" placeholder="input adress" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="num" placeholder="input num" class="form-control">
                        </div>
                        <button type="submit" class="btn btn primary">
                            SAVE
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

